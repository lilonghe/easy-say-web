.messageList {
  width: 600px;
  margin: auto;
  margin-top: 20px;
}

  .messageSend {
    margin-bottom: 20px;
    height: 120px;
  }

.sendInput {
  width: 100%;
  border: 1px solid #EEE;
  outline: none;
  height: 70px;
  padding: 10px;
  resize: none;
  border-radius: 10px;
  margin-top: 5px;
}

.sendBtn {
  margin-left: 100%;
  float: right;
  border: none;
  box-shadow: 0 0 0 .5px rgba(0,0,0,.08);
  background-color: #FFF;
  padding: 4px 20px;
  margin-top: 4px;
  border-radius: 4px;
  cursor: pointer;
  transition: all .1s;
  outline: none;

  &:hover {
    box-shadow: 1px 1px 3px 1px rgba(0,0,0,.08);
  }

  &:active {
    box-shadow: inset 0px 0px 1px 0.8px rgba(0,0,0,0.05);
  }
}

@media screen and (max-width: 768px) {
  .messageList {
    width: 100%;
  }
}