.message {
  padding: 10px 20px;
  box-shadow: 0 0 10px 0px rgba(0,0,0,.05);
  border-radius: 10px;
  margin-bottom: 20px;
  overflow: hidden;

  .userinfo {
    display: flex;
  }

  .avatar {
    border-radius: 50%;
    width: 50px;
    height: 50px;
    margin-right: 10px;

    color: #CCC;
    text-align: center;
    line-height 50px;
    font-size: 24px;
  }

  .nickname {
    margin-top: 4px;
    display: block;
  }

  .briefIntro {
    color: #CCC;
    font-size: 12px;
    white-space nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    max-width: 500px;
    margin-top: 4px;
  }

  .content {
    margin-left: 60px;
    font-size: 14px;
    margin-top: 5px;
    word-break break-all;
    line-height: 1.4;
  }

  .interactive {
    font-size: 12px;
    text-align: right;
    margin-top: 10px;
    color #AAA;

    span {
      margin-left: 10px;
    }
  }
}