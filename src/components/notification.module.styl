.notificationWrapper {
  position: fixed;
  top: 20px;
  right: 20px;

  min-width: 200px;
  padding: 20px 15px;
  box-shadow: 0 3px 6px -4px rgba(0,0,0,.12), 0 6px 10px 0 rgba(0,0,0,.08), 0 9px 28px 8px rgba(0,0,0,.05);

  .closeIcon {
    position: absolute;
    right: 6px;
    top: 6px;
    width: 1em;
    height: 1em;
    cursor: pointer;
    color: #AAA;
  }
}